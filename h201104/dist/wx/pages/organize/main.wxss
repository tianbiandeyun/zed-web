@import "../../common/vendor.wxss";

.organize-container .van-cell {
  font-size: 32rpx;
  color: #f8f8f9;
  background-color: #808695;
}
.organize-container .van-icon {
  color: #fff !important;
}
.organize-container .van-cell:after {
  border-bottom: 2rpx solid #808695;
}
.organize-container .organize-content {
  margin-bottom: 20rpx;
}
.organize-container .organize-content .organize-content-title {
  font-size: 32rpx;
  color: #17233d;
  margin-bottom: 10rpx;
}
.organize-container .organize-content .organize-content-message {
  font-size: 28rpx;
  color: #515a6e;
  line-height: 1.8;
}
.organize-container .organize-content .organize-content-images {
  height: 1400rpx;
}
.organize-container .organize-content .organize-content-images ._img {
  width: 100%;
  height: 100%;
}
.organize-container .organize-message {
  background-color: #fff;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.organize-container .organize-message > .message {
  margin-bottom: 20rpx;
}
.organize-container .organize-message > .message > ._div {
  display: grid;
  grid-template-columns: 1.2fr 3fr;
  height: 60rpx;
  border-bottom: 2rpx solid #dcdee2;
  padding: 20rpx 0;
}
.organize-container .organize-message > .message > ._div > ._span {
  font-size: 32rpx;
  font-weight: bold;
  color: #17233d;
  line-height: 60rpx;
}
.organize-container .organize-message > .message > ._div > ._input {
  font-size: 32rpx;
  height: 60rpx;
  color: #17233d;
}
.organize-container .organize-message > .message > ._div > picker {
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #17233d;
}
.organize-container .organize-message .organize-submit ._button {
  background-color: #19be6b;
  color: #fff;
  width: 600rpx;
}